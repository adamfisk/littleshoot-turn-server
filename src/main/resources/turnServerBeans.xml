<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <bean id="turnPortGenerator"
          class="org.lastbamboo.common.stun.stack.turn.RandomNonCollidingPortGeneratorImpl"/>
          
    <!--
        The class that keeps track of TURN clients.
    -->
    <bean id="turnClientManager"
          class="org.lastbamboo.common.turn.server.TurnClientManagerImpl">
        <constructor-arg><ref local="turnPortGenerator"/></constructor-arg>
        </bean>

    <!--
        The TURN server.
    -->
    <bean id="turnServer"
          class="org.lastbamboo.common.turn.server.TcpTurnServer">
        </bean>
    </beans>
